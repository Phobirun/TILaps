<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundloyout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        style="@style/TextViewLayoutNameTilaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_info" />

    <TextView
        android:id="@+id/textView6"
        style="@style/TextViewHeaderTilaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Разработчик" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView28"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="Комиссаров"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/textView29"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="Сергей"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/textView30"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="Дмитриевич"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                style="@style/ButtonImageTilaps"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/foto_developer" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView31"
        style="@style/TextViewHeaderTilaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Контакты" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView32"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="email"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/textView33"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="телефон"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/textView34"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="instagram"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/textView35"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
