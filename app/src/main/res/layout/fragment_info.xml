                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="вконтакте"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView36"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="e_s.d.komissarov@mpt.ru"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/textView37"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="+7 (925) 345 45 32"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/textView40"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="instagram.com/phobirun"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/textView39"
                style="@style/TextViewTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="vk.com/phobirun"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewHeaderTilaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="TiLaps - разработан, чтобы предоставить Вам простой способ создания TimeLapse video и TimeLapse photo."
        android:textAlignment="center" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            style="@style/TextViewTilaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/version"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>