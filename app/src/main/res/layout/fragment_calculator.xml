<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundloyout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        style="@style/TextViewLayoutNameTilaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Calculator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/TextViewHeaderTilaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Shooting" />

                <LinearLayout
                    android:id="@+id/linerLayout_interval"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_interval"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/interval" />

                    <EditText
                        android:id="@+id/editText_interval"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/nol"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView10"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:text="@string/second" />

                    <ImageButton
                        android:id="@+id/imageButton_interval_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        app:srcCompat="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_interval_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayout_lenght"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_lenght"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/Lenght" />

                    <EditText
                        android:id="@+id/editText_lenght"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/nol"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView11"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:text="@string/minuts" />

                    <ImageButton
                        android:id="@+id/imageButton_lenght_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        app:srcCompat="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_lenght_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayout_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_quantity"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/quantity_frame" />

                    <EditText
                        android:id="@+id/editText_quantity"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/nol"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView12"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1" />

                    <ImageButton
                        android:id="@+id/imageButton_quantity_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        android:src="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_quantity_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/TextViewHeaderTilaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/video" />

                <LinearLayout
                    android:id="@+id/linerLayout_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_frequency"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/frequenc_frame" />

                    <EditText
                        android:id="@+id/editText_frequency"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/nol"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:text="@string/fps" />

                    <ImageButton
                        android:id="@+id/imageButton_frequency_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        app:srcCompat="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_frequency_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayout_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_duration"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/Lenght" />

                    <EditText
                        android:id="@+id/editText_duration"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:ems="10"
                        android:hint="@string/nol"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:text="@string/second" />

                    <ImageButton
                        android:id="@+id/imageButton_duration_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        app:srcCompat="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_duration_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TextViewHeaderTilaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/size" />

                <LinearLayout
                    android:id="@+id/linerLayout_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_size"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/size_frame" />

                    <EditText
                        android:id="@+id/editText_size"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/nol"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:text="@string/mb" />

                    <ImageButton
                        android:id="@+id/imageButton_size_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        app:srcCompat="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_size_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayout_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox_amount"
                        style="@style/CheckBoxTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="@string/total_size" />

                    <EditText
                        android:id="@+id/editText_amount"
                        style="@style/EditTextTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/nol"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/TextViewTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:text="@string/mb" />

                    <ImageButton
                        android:id="@+id/imageButton_amount_minus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/down"
                        app:srcCompat="@drawable/ic_minus_svg" />

                    <ImageButton
                        android:id="@+id/imageButton_amount_plus"
                        style="@style/ButtonImageTilaps"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:contentDescription="@string/up"
                        app:srcCompat="@drawable/ic_plus_svg" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mode"
                style="@style/TextViewHeaderTilaps" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox_hdr"
                    style="@style/CheckBoxTilaps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:text="@string/hdr" />

                <CheckBox
                    android:id="@+id/checkBox_super"
                    style="@style/CheckBoxTilaps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:text="@string/super_mode" />

                <CheckBox
                    android:id="@+id/checkBox_multi"
                    style="@style/CheckBoxTilaps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:text="@string/multi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_raw"
                        style="@style/RadioButtonTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33333"
                        android:text="@string/raw" />

                    <RadioButton
                        android:id="@+id/radioButton_raw_jpg"
                        style="@style/RadioButtonTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33333"
                        android:text="@string/raw_jpg" />

                    <RadioButton
                        android:id="@+id/radioButton_jpg"
                        style="@style/RadioButtonTilaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33333"
                        android:text="@string/jpg" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_size"
                style="@style/TextViewHeaderTilaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_size"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>