<resources>

    <!-- Base application theme. -->



    <style name="AppTheme.FullScreen" parent="AppTheme">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:fontFamily">@font/fontnormal</item>
    </style>


    <style name="ButtonTilaps" parent="Widget.AppCompat.Button" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:layout_margin">10dp</item>

    </style>


    <style name="TextViewTilaps" parent="" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="TextViewHeaderTilaps" parent="TextViewTilaps" >
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextViewLayoutNameTilaps" parent="TextViewTilaps" >
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CheckBoxTilaps" parent="TextViewTilaps" >
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonTilaps" parent="TextViewTilaps" >
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextTilaps" parent="TextViewTilaps" >
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>








</resources>
